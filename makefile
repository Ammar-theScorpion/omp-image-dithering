CC=g++
CFLAGS=
LIBS=
DEPS =
OBJ =	
omp: $(OBJ) clean
	g++ -fopenmp -O3 -o omp omp.cpp
	./omp img.txt mask.txt save.txt
serial: $(OBJ) clean
	g++ -o serial serial.cpp
	./serial img.txt mask.txt save.txt
clean:
	rm -f *.o *~

